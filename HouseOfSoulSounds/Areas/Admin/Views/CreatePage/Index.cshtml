@model IQueryable<NewPage>
@{
    string strTitle = "New page";
    ViewBag.Title = strTitle;
}
<div>
   
    @foreach (var item in Model)
    {
        <p>@item.PageTitle</p>
        <div>
            @item.ImagePage
        </div>
        <div>
            @item.BaseText
        </div>
        <div>@item.Saidbar_text</div>
    }
</div>
<div>
    @using (Html.BeginForm("Edit", "CreatePage", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <!-- атрибут name такой же как в контроллере у метода параметр -->
        <input type="text" name="titleImagePath1" id="add" />
        <a asp-area="Admin" asp-action="Addname" asp-controller="CreatePage">Выбор имени контроллера</a>

        <button class="btn btn-info" type="submit">Добавить</button>
    </div>
    }
</div>
    