<!-- header
================================================== -->
<header class="s-header header">

    <div class="header__logo">
        <a class="logo" href='@Url.Action("Index", "Home")'>
            <img src="images/logo.jpg" alt="Homepage">
        </a>
    </div> <!-- end header__logo -->

    <a class="header__search-trigger" href="#0"></a>
    <div class="header__search">

        <form role="search" method="get" class="header__search-form" action="#">
            <label>
                <span class="hide-content">Search for:</span>
                <input type="search" class="search-field" placeholder="Type Keywords" value="" name="s" title="Search for:" autocomplete="off">
            </label>
            <input type="submit" class="search-submit" value="Search">
        </form>

        <a href="#0" title="Close Search" class="header__overlay-close">Close</a>

    </div>  <!-- end header__search -->

    <a class="header__toggle-menu" href="#0" title="Menu"><span>Menu</span></a>
    <nav class="header__nav-wrap">

        <h2 class="header__nav-heading h6">Navigate to</h2>

        <ul class="header__nav">
            @if (User.Identity.IsAuthenticated)
            {
                <li>
                    <a asp-area="" asp-controller="Account" asp-action="EditRegister" asp-route-returnUrl=@ViewData["ReturnUrl"]>
                        <img src="~/images/user.ico" />
                        @User.Identity.Name.ToLower()
                    </a>
                </li>
                @if (User.Identity.Name == "admin")
                {
                <a asp-area="Admin" asp-controller="Home" asp-action="Index">Панель администратора</a>
                }
                <li> <a asp-area="" asp-controller="Account" asp-action="Logout">выход</a></li>
            }
            else
            {
                <li><a asp-area="" asp-controller="Account" asp-action="Login">войти</a></li>
                <li> <a asp-area="" asp-controller="Account" asp-action="Register">регистрация</a></li>
            }
            <li class="current"><a href='@Url.Action("Index", "Home")' title="">Home</a></li>
            <li class="has-children">
                <a href="#0" title="">Categories</a>
                <ul class="sub-menu">
                    <li><a href='@Url.Action("About", "Instruments")'>Instruments</a></li>
                    <li><a href='@Url.Action("Carts", "Carts")'>Carts</a></li>
                    <li><a href='@Url.Action("Index", "Barabans")'>Barabans</a></li>
                    <li><a href='@Url.Action("Index", "Wind")'>Духовые</a></li>
                    <li><a href="">Ударные</a></li>
                    <li><a href="">Струнные</a></li>
                </ul>
            </li>
            <li class="has-children">
                <a href="#0" title="">Blog</a>
                <ul class="sub-menu">
                    <li><a href="single-video.html">Video Post</a></li>
                    <li><a href="single-audio.html">Audio Post</a></li>
                    <li><a href="single-standard.html">Standard Post</a></li>
                </ul>
            </li>
            @*<li><a href='@Url.Action("Login", "Account")' title="">Вход</a></li>
        <li><a href='@Url.Action("Logout", "Account")' title="">Выход</a></li>
        <li><a href='@Url.Action("Register", "Account")' title="">Регистрация</a></li>*@
            <li><a href='@Url.Action("Info", "Home")' title="">About</a></li>
            <li><a href='@Url.Action("Privacy", "Home")' title="">Contact</a></li>
            @*<li><a href="" title="">Instruments</a></li>*@

        </ul> <!-- end header__nav -->


        <a href="#0" title="Close Menu" class="header__overlay-close close-mobile-menu">Close</a>

    </nav> <!-- end header__nav-wrap -->

</header> <!-- s-header -->
